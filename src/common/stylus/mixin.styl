border-1px($color)
  position relative
  &::before
    content ''
    display block
    height 1px
    width 100%
    position absolute
    left 0
    bottom 0
    background $color

bg-image($url)
  background-image url($url+'@2x.png')
  @media only screen  and (-webkit-device-pixel-ratio:3 )
    background-image url($url+'@3x.png')

clearfix()
  &:after
    content: "";
    display: block;
    clear: both;
